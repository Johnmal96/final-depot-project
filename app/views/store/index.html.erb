<p id="notice"><%= notice %></p>

<h1>Products</h1>
<br>
<br>
<%= link_to 'Show My Cart', cart_path(@cart) , class:"w3-button w3-light-gray w3-border" %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
         <%= image_tag(product.image_url, class: 'list_image') %>
        </td>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product), class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Show', product , class:"w3-button w3-light-gray" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
