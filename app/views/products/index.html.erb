<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
         <%= image_tag(product.image_url, class: 'list_image1') %>
        </td>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= link_to 'Show', product , class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-light-gray" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path , class:"w3-button w3-light-gray" %>
